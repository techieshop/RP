@model RoleDetailsViewModel

@Html.Partial(Mvc.View.Setting.ListItems, Dom.EntityType.Role.Id)

<div class="container">
	<div class="row">
		<br />
		<div class="col-md-8 col-md-offset-2">
			@using (Html.BeginForm(Mvc.Controller.Role.Edit, Mvc.Controller.Role.Name, FormMethod.Post, new { @class = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(m => m.Detail.Id)
				@Html.RPTextBoxFor(m => m.Detail.Name)
				@Html.RPTextAreaFor(m => m.Detail.Description)
				<input type="submit" class="btn btn-primary" value="@StyleContext.GetTranslation(Dom.Translation.Common.Save)" />
				<input type="button" class="btn btn-warning" value="@StyleContext.GetTranslation(Dom.Translation.Common.Cancel)" data-href="@Url.Action(Mvc.Controller.Role.Details, Mvc.Controller.Role.Name, new {id = Model.Detail.Id})" />
			}
		</div>
	</div>
</div>