@model RoleAddViewModel

@Html.Partial(Mvc.View.Setting.ListItems, Dom.EntityType.Role.Id)

<div class="container">
	<div class="row">
		<br />
		<p class="lead text-center">
			@StyleContext.GetTranslation(Dom.Translation.Role.NewRole)
		</p>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			@using (Html.BeginForm(Mvc.Controller.Role.Add, Mvc.Controller.Role.Name, FormMethod.Post, new { @class = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.RPTextBoxFor(m => m.Name)
				@Html.RPTextAreaFor(m => m.Description)
				<input type="submit" class="btn btn-primary" value="@StyleContext.GetTranslation(Dom.Translation.Common.Save)" />
				<input type="button" class="btn btn-warning" value="@StyleContext.GetTranslation(Dom.Translation.Common.Cancel)" data-href="@Url.Action(Mvc.Controller.Role.List, Mvc.Controller.Role.Name)" />
			}
		</div>
	</div>
</div>