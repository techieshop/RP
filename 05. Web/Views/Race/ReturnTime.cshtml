@model RaceResultReturnTimesViewModel

@Html.Partial(Mvc.View.Setting.ListItems, Dom.EntityType.Race.Id)

<br>
<div class="container">
	<div class="row">
		<a href="@Url.Action(Mvc.Controller.Race.Details, Mvc.Controller.Race.Name, new {id = Model.Detail.Id})">
			<i class="glyphicon glyphicon-arrow-left"></i>
			@StyleContext.GetTranslation(Dom.Translation.Race.BackToRaceDetails)
		</a>
	</div>
	<hr />
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<span class="text-muted">@StyleContext.GetTranslation(Dom.Translation.Common.Name):</span> @Model.Detail.Name<br>
			<span class="text-muted">@StyleContext.GetTranslation(Dom.Translation.Race.RaceType):</span> @Model.Detail.RaceTypeName<br>
			<span class="text-muted">@StyleContext.GetTranslation(Dom.Translation.Organization.Singular):</span> @Model.Detail.OrganizationName<br>
			<span class="text-muted">@StyleContext.GetTranslation(Dom.Translation.Season.Singular):</span> @Model.Detail.SeasonName<br>
			<span class="text-muted">@StyleContext.GetTranslation(Dom.Translation.Point.Singular):</span> @Model.Detail.PointName<br>
			<br>
			@using (Html.BeginForm(Mvc.Controller.Race.ReturnTime, Mvc.Controller.Race.Name, FormMethod.Post, new { @class = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(m => m.Detail.Id)
				@Html.HiddenFor(m => m.Detail.PointId)
				@Html.HiddenFor(m => m.Detail.SeasonTypeId)
				@Html.HiddenFor(m => m.Detail.RaceTypeId)
				@Html.HiddenFor(m => m.Detail.Name)
				@Html.RPTabsWithDateTimeFor(m => m.PigeonReturnTimesJson, Model.PigeonReturnItems)
				<input type="submit" class="btn btn-primary" value="@StyleContext.GetTranslation(Dom.Translation.Common.Save)" />
				<input type="button" class="btn btn-warning" value="@StyleContext.GetTranslation(Dom.Translation.Common.Cancel)" data-href="@Url.Action(Mvc.Controller.Race.Details, Mvc.Controller.Race.Name, new {id = Model.Detail.Id})" />
			}
		</div>
	</div>
</div>
