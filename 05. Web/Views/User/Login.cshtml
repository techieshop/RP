@model UserLoginViewModel

<div class="row">
	@if (Request.Url != null && Request.Url.ToString().Contains("redirectUrl"))
	{
	<p class="lead text-center">
		@StyleContext.GetTranslation(Dom.Translation.Common.AuthLogin)
	</p>
	}
	<div class="col-md-6 col-md-offset-3">
		@using (Html.BeginForm(Mvc.Controller.User.LogIn, Mvc.Controller.User.Name, FormMethod.Post, new { @class = "form" }))
		{
		@Html.AntiForgeryToken()
			@Html.RPHiddenFor(m => m.RedirectUrl)
			@Html.RPTextBoxFor(m => m.Email)
			@Html.RPTextBoxFor(m => m.Password, DataTypeUI.Password)
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-log-in"></span>
				@StyleContext.GetTranslation(Dom.Translation.User.LogIn)
			</button>
		}
	</div>
</div>
