@model TextBoxViewModel

<div class="form-group">
	<label class="control-label">
		@Model.LabelMessage
		@if (Model.IsRequired && Model.ShowValidationMessage)
		{
			<span class="required">*</span>
		}
	</label>
	@Model.Input
	@if (Model.DataType == DataTypeUI.Password)
	{
		<div class="glyphicon glyphicon-eye-open"></div>
	}
	else
	{
		<div class="clear-input"></div>
	}
	@if (Model.ShowValidationMessage)
	{
		<div class="validation-section">@Model.ValidationMessage</div>
	}
</div>