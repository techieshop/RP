@model AddressViewModel

@if (!string.IsNullOrWhiteSpace(Model.FormattedAddress))
{
	string address = "https://maps.google.com/maps?hl=uk&q=" + Model.FormattedAddress.Replace(" ", "+") + "&output=embed";
	<div class="row">
		<div class="col-md-12">
			<hr />
			<iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@address"></iframe>
		</div>
	</div>
}